{
    "compileOnSave": true,
    "compilerOptions": {
        "noImplicitAny": true,
        "noEmitOnError": true,
        "removeComments": false,
        "sourceMap": true,
        "declaration": false,
        "typeRoots": ["node_modules/@types", "../../public/vendor"],
        "target": "es6",
        "module": "amd",
        "outFile": "../../public/vendor/monaco.js",
        "types": [
            "requirejs",
            "jquery"
        ]
    },
    "include": [
        "../vendor/monaco-editor/monaco.d.ts",
        "../vendor/typescript/lib/typescriptServices.d.ts",
        "./monaco.ts"
    ],
    "exclude": ["old"]
}